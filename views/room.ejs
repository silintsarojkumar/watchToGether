<!DOCTYPE html>
<html>
<head>
  <title>Watch & Video Call Room</title>
  <script src="/socket.io/socket.io.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/peerjs@1.3.1/dist/peerjs.min.js"></script>
  <script src="https://www.youtube.com/iframe_api"></script>
  <script defer src="/js/room.js"></script>
  <style>
    body { font-family: Arial; margin: 0; padding: 0; }
    #video-grid { display: flex; flex-wrap: wrap; padding: 10px; }
    video { width: 300px; margin: 5px; border-radius: 10px; }
    #shared-video { display: flex; justify-content: center; margin-top: 20px; }
    iframe, video.shared { width: 640px; height: 360px; }
    #controls { text-align: center; margin: 10px; }
    #link-copy-box { text-align: center; margin: 10px; }
    #link-copy-box input { width: 60%; padding: 5px; }
    #link-copy-box button { padding: 5px 10px; }
  </style>
</head>
<body>
  <h2 style="text-align:center">Room Link</h2>
  <div id="link-copy-box">
    <input type="text" id="room-link" readonly value="" />
    <button onclick="copyLink()">Copy Link</button>
  </div>
  <form id="video-form" style="text-align:center">
    <input id="video-url" type="text" placeholder="YouTube or video URL" style="width:400px" />
    <button type="submit">Share Video</button>
  </form>
  <div id="controls">
    <button id="switch-camera">Switch Camera</button>
  </div>
  <div id="shared-video"></div>
  <div id="video-grid">
    <video id="my-video" autoplay muted></video>
  </div>
  <script>
    document.getElementById('room-link').value = window.location.href;
    function copyLink() {
      const linkInput = document.getElementById('room-link');
      linkInput.select();
      linkInput.setSelectionRange(0, 99999);
      document.execCommand('copy');
      alert('Link copied to clipboard!');
    }
  </script>
</body>
</html>